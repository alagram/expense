= render 'shared/errors', object: @item

.content
  #home.col-md-4.col-md-offset-4
    %h6 Add New Item
    = form_for @item, html: { autocomplete: "off" } do |f|
      .form-group
        = f.text_field :name, class: 'form-control', placeholder: 'Item'
      .form-group
        = f.text_field :description, class: 'form-control', placeholder: 'Description'
      .form-group
        = f.text_field :price, class: 'form-control', placeholder: 'Price'
      .form-group
        = f.text_field :new_shop, class: 'form-control', placeholder: 'Shop Name'
      %h6 Or Select Shop
      .form-group
        = f.select :shop_id, Shop.all.map { |shop| [shop.name, shop.id] }, { include_blank: true }, class: 'shop'
      .form-group
        = f.submit "Add Item", class: 'btn btn-default btn-wide'
